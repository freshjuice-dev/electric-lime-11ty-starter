---
layout: layouts/base.njk
---
{% from "_components/index.njk" import button %}

<section class="section flex-1 flex items-center justify-center">
  <div class="container text-center">
    <p class="text-9xl font-bold text-primary-200 hc:text-primary-300">
      {{ errorCode | default("404") }}
    </p>

    <h1 class="mt-4 text-3xl md:text-4xl">
      {{ title | default("Page Not Found") }}
    </h1>

    <p class="mt-4 text-lg text-zinc-600 max-w-md mx-auto hc:text-zinc-700">
      {{ description | default("Sorry, we couldn't find the page you're looking for. It might have been moved or deleted.") }}
    </p>

    <div class="mt-8 flex flex-wrap justify-center gap-4">
      {{ button({
        text: "Go Home",
        url: "/",
        variant: "primary"
      }) }}

      {{ button({
        text: "Contact Us",
        url: "/contact/",
        variant: "outline"
      }) }}
    </div>
  </div>
</section>
