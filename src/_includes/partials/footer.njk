{# Site Footer #}

<footer class="bg-zinc-900 text-zinc-400 hc:bg-white hc:text-zinc-700 py-12 md:py-16">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12">
      {# Brand column #}
      <div class="md:col-span-2">
        <a href="/" class="inline-flex items-center gap-2 text-xl font-bold text-white hc:text-zinc-900 no-underline hover:text-primary-400">
          <img src="/favicon-96x96.png" alt="{{ metadata.title | default("Electric Lime") }}"
               width="32" height="32" class="w-8 h-8" loading="lazy" eleventy:ignore>
          <span>{{ metadata.title | default("Electric Lime") }}</span>
        </a>

        <p class="mt-4 text-sm max-w-md">
          {{ metadata.description | default("A vibrant 11ty starter with Tailwind CSS and Alpine.js. Fast, accessible, and beautifully designed.") }}
        </p>

        {# Social links #}
        {% if socials %}
          <div class="flex gap-4 mt-6">
            {% for social in socials %}
              <a
                href="{{ social.url }}"
                class="text-zinc-400 hc:text-zinc-700 hover:text-white hc:hover:text-primary-700 transition-colors"
                aria-label="{{ social.label }}"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  {% if social.platform == "twitter" or social.platform == "x" %}
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  {% elif social.platform == "github" %}
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  {% elif social.platform == "linkedin" %}
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  {% endif %}
                </svg>
              </a>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      {# Navigation columns #}
      {% for column in footer.columns %}
        <div>
          <h3 class="text-sm font-semibold text-white hc:text-zinc-900 uppercase tracking-wider mb-4">
            {{ column.title }}
          </h3>
          <ul class="space-y-3">
            {% for link in column.links %}
              <li>
                <a
                  href="{{ link.url }}"
                  class="text-sm text-zinc-400 hc:text-zinc-700 hover:text-white hc:hover:text-primary-700 transition-colors no-underline hc:underline"
                  {% if link.external %}target="_blank" rel="noopener noreferrer"{% endif %}
                >
                  {{ link.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>

    {# Bottom bar #}
    <div class="mt-12 pt-8 border-t border-zinc-800 hc:border-zinc-300">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-sm">
          &copy; {% year %} {{ metadata.title | default("Electric Lime") }}. All rights reserved.
        </p>

        {% if footer.legal %}
          <div class="flex gap-6">
            {% for link in footer.legal %}
              <a
                href="{{ link.url }}"
                class="text-sm text-zinc-400 hc:text-zinc-700 hover:text-white hc:hover:text-primary-700 transition-colors no-underline hc:underline"
              >
                {{ link.label }}
              </a>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      {# High Contrast Toggle #}
      <div class="mt-6 flex justify-center sm:justify-start">
        <contrast-toggle></contrast-toggle>
      </div>
    </div>
  </div>
</footer>
